@model Project_01.Models.Student

@{
    ViewData["Title"] = "學生基本資料";
}

<h1>建立學生基本資料</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="StuId" class="control-label"></label>
                    <input asp-for="StuId" class="form-control" />
                    <span asp-validation-for="StuId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="StuNameC" class="control-label"></label>
                <input asp-for="StuNameC" class="form-control" />
                <span asp-validation-for="StuNameC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuNameE" class="control-label"></label>
                <input asp-for="StuNameE" class="form-control" />
                <span asp-validation-for="StuNameE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuIdno" class="control-label"></label>
                <font color="red">*</font>
                <input asp-for="StuIdno" class="form-control" />
                <span asp-validation-for="StuIdno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuEmail" class="control-label"></label>
                <input asp-for="StuEmail" class="form-control" />
                <span asp-validation-for="StuEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuGender" class="control-label"></label>
                @*<input asp-for="StuGender" class="form-control" />*@
                <select asp-for="StuGender" class="form-control" asp-items="Html.GetEnumSelectList<Student.Gender>()">
                </select>
                <span asp-validation-for="StuGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuBirthday" class="control-label"></label>
                <input asp-for="StuBirthday" class="form-control" />
                <span asp-validation-for="StuBirthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuYear" class="control-label"></label>
                <font color="red">*</font>
                <input asp-for="StuYear" class="form-control" />
                <span asp-validation-for="StuYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="建立" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回上頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
